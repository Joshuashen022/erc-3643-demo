# =============================================================================
# RWA Token Deployment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Usage: source .env before running forge script commands

# =============================================================================
# Identity & Claim Issuer Configuration
# =============================================================================
# Used by: DeployRWAClaimIssuer.s.sol, DeployRWAIdentity.s.sol, DeployIntegration.s.sol

# Management key address (defaults to msg.sender if not set)
MANAGEMENT_KEY=

# Claim key address for signing claims (defaults to msg.sender if not set)
CLAIM_KEY_ADDRESS=

# Private key for signing claims (hex format, no 0x prefix)
# Used for adding KYC claims to identities
CLAIM_KEY_PRIVATE_KEY=

# Claim issuer address (required when adding claims to identity)
CLAIM_ISSUER_ADDRESS=

# Whether to add a KYC claim to the identity (true/false)
# Used by: DeployRWAIdentity.s.sol
ADD_CLAIM=false

# =============================================================================
# Token Configuration
# =============================================================================
# Used by: DeployRWAToken.s.sol, DeployIntegration.s.sol

# Token name
TOKEN_NAME=Test Token

# Token symbol
TOKEN_SYMBOL=TT

# Token decimals (0-18)
TOKEN_DECIMALS=6

# Onchain ID address (can be zero address if not set)
ONCHAIN_ID=0x123456

# Whether to add deployer as agent (true/false)
ADD_AGENT=true

# Whether to unpause token after deployment (true/false)
UNPAUSE=true

# =============================================================================
# Identity Registry Configuration
# =============================================================================
# Used by: DeployRWAIdentityRegistry.s.sol

# Trusted Issuers Registry address (required)
TRUSTED_ISSUERS_REGISTRY_ADDRESS=

# Claim Topics Registry address (required)
CLAIM_TOPICS_REGISTRY_ADDRESS=

# Identity Registry Storage address (required)
IDENTITY_REGISTRY_STORAGE_ADDRESS=

# Storage owner address (optional, for binding IdentityRegistry to Storage)
STORAGE_OWNER=

# =============================================================================
# Identity Registry Storage Configuration
# =============================================================================
# Used by: DeployRWAIdentityRegistryStorage.s.sol

# Identity Registry address (optional, for binding after deployment)
IDENTITY_REGISTRY_ADDRESS=

# =============================================================================
# Claim Topics Registry Configuration
# =============================================================================
# Used by: DeployRWAClaimTopicsRegistry.s.sol

# Whether to add KYC topic (1) after deployment (true/false)
ADD_KYC_TOPIC=true

# =============================================================================
# Token Deployment Dependencies
# =============================================================================
# Used by: DeployRWAToken.s.sol

# Identity Registry address (required)
# COMPLIANCE_ADDRESS=

# Compliance contract address (required)
# IDENTITY_REGISTRY_ADDRESS=

# =============================================================================
# Deployment Order Example
# =============================================================================
# 1. DeployRWAClaimIssuer.s.sol
#    - MANAGEMENT_KEY
#    - CLAIM_KEY_ADDRESS
#
# 2. DeployRWAIdentity.s.sol
#    - MANAGEMENT_KEY
#    - CLAIM_KEY_ADDRESS
#    - CLAIM_ISSUER_ADDRESS (from step 1)
#    - CLAIM_KEY_PRIVATE_KEY
#    - ADD_CLAIM=true
#
# 3. DeployRWACompliance.s.sol
#    - No environment variables needed
#
# 4. DeployRWATrustedIssuersRegistry.s.sol
#    - No environment variables needed
#
# 5. DeployRWAIdentityRegistryStorage.s.sol
#    - IDENTITY_REGISTRY_ADDRESS (optional, can be set later)
#
# 6. DeployRWAClaimTopicsRegistry.s.sol
#    - ADD_KYC_TOPIC=true
#
# 7. DeployRWAIdentityRegistry.s.sol
#    - TRUSTED_ISSUERS_REGISTRY_ADDRESS (from step 4)
#    - CLAIM_TOPICS_REGISTRY_ADDRESS (from step 6)
#    - IDENTITY_REGISTRY_STORAGE_ADDRESS (from step 5)
#    - STORAGE_OWNER (owner of storage from step 5)
#
# 8. DeployRWAToken.s.sol
#    - IDENTITY_REGISTRY_ADDRESS (from step 7)
#    - COMPLIANCE_ADDRESS (from step 3)
#    - TOKEN_NAME
#    - TOKEN_SYMBOL
#    - TOKEN_DECIMALS
#    - ONCHAIN_ID
#    - ADD_AGENT=true
#    - UNPAUSE=true
